{
	"name": "parser-linter",
	"displayName": "parser-linter",
	"description": "Development Tool for Sumo Parsing Language",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*", "onLanguage:sumoparsing"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [{
            "id": "sumoparse",
            "aliases": ["Sumo Parsing Language", "sumoparse"],
            "extensions": [".conf"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "sumoparse",
            "scopeName": "source.conf",
            "path": "./syntaxes/sumoparse.tmLanguage.json"
		}],
		"snippets": [
			{
				"language": "sumoparse",
				"path": "./snippets/sumoparse.snippets.json"
			}
		],
		"commands": [
			{
				"command": "extension.JSONTemplate",
				"title": "JSON Tempalate Parser"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	},
	"languages": [{
        "id": "sumoparsing",
        "extensions": [ ".conf" ],
        "aliases": [ "SumoParsing", "sumoparsing" ]
	}],
	"files.associations": {
        "*.conf": "sumoparsing"
    }
}
